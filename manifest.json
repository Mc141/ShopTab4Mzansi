{
  "manifest_version": 3,
  "name": "#ShopTab4Mzansi",
  "version": "1.0.0",
  "description": "Adds a Shopping button to Google Search pages for quick access to Shopping-style results. Designed for South African users.",
  "browser_specific_settings": {
    "gecko": {
      "id": "shoptab4mzansi@mcwolmarans.dev",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "https://www.google.co.za/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "#ShopTab4Mzansi - Shopping Shortcut",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  }
}
